<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <changeSet id="202511251008-1" author="anvar">
    <createSequence incrementBy="1" sequenceName="orders_seq" startValue="1"/>

    <createTable tableName="orders">
      <column name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_orders"/>
      </column>

      <column name="user_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="product_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="quantity" type="INT">
        <constraints nullable="false"/>
      </column>

      <column name="total_price" type="DECIMAL(19,2)">
        <constraints nullable="false"/>
      </column>

      <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>

      <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>

    </createTable>

    <createIndex indexName="idx_orders_user_id" tableName="orders">
      <column name="user_id"/>
    </createIndex>

  </changeSet>

</databaseChangeLog>