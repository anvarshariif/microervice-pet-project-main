<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <changeSet id="202511191507-3" author="anvar">
    <addColumn tableName="products">
      <column name="image_name" type="VARCHAR(255)">
        <constraints nullable="true"/>
      </column>

      <column name="image_url" type="VARCHAR(500)">
        <constraints nullable="true"/>
      </column>

      <column name="image_content_type" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
    </addColumn>

    <createIndex indexName="idx_products_image_name" tableName="products">
      <column name="image_name"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>